@model Kursova_Robota.Models.User
<link rel="stylesheet" href="/css/register.css">
<div class="login-page">
    <!-- Ліва частина: Привітання -->
    <div class="login-left">
        <h1>Ласкаво просимо до YourBook!</h1>
        <p>Авторизуйтесь, щоб отримати доступ до вашого профілю, переглянути замовлення та зробити покупки.</p>
    </div>

    <!-- Права частина: Форма входу -->
    <div class="login-right">
        <div class="login-card">
            <h2 class="text-center mb-4">Увійти</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username">Ім'я користувача</label>
                    <input asp-for="Username" class="form-control" placeholder="Введіть ваше ім'я" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email">Електронна пошта</label>
                    <input asp-for="Email" class="form-control" placeholder="Введіть вашу пошту" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Введіть пароль" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Увійти</button>
                <div class="text-center">
                    <a href="/Account/ForgotPassword" class="text-secondary">Забули пароль?</a>
                </div>
            </form>
            <hr class="my-4" />
            <div class="social-login">
                <p class="text-center">або увійдіть через</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/Account/LoginWithGoogle" class="btn btn-outline-danger social-btn">
                        <i class="bi bi-google"></i> Google
                    </a>
                    <a href="/Account/LoginWithFacebook" class="btn btn-outline-primary social-btn">
                        <i class="bi bi-facebook"></i> Facebook
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
