@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Головна";
}

<!-- Головний банер з текстом -->
<section class="text-center my-5">
    <h2 class="fw-bold display-4">Зустрічайте новинки!</h2>
    <p class="lead">Найсвіжіші книги на нашому сайті. Обирайте свій наступний шедевр вже сьогодні!</p>
</section>

<!-- Секція новинок -->
<div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Індикатори -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>

    <!-- Слайди -->
    <div class="carousel-inner">
        <!-- Перший слайд з 3 книгами -->
        <div class="carousel-item active">
            <div class="d-flex justify-content-around">
                <!-- Книга 1 -->
                <div class="text-center">
                    <img src="/images/vumukach.jpg" class="book-banner-img mb-3" alt="Вимикач. Книга 3">
                    <h6>Вимикач. Книга 3</h6>
                    <p>Пенелопа Дуглас</p>
                    <a href="/Book/Details/6" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <!-- Книга 2 -->
                <div class="text-center">
                    <img src="/images/vusche_neba.jpg" class="book-banner-img mb-3" alt="Вище неба. Місто вітрів">
                    <h6>Вище неба. Місто вітрів</h6>
                    <p>Л. Томфорд</p>
                    <a href="/Book/Details/7" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <!-- Книга 3 -->
                <div class="text-center">
                    <img src="/images/dvopovnya.jpg" class="book-banner-img mb-3" alt="Двоповня. Закони Невриди">
                    <h6>Двоповня. Закони Невриди</h6>
                    <p>К. Самойленко</p>
                    <a href="/Book/Details/8" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
            </div>
        </div>

        <!-- Другий слайд з 3 книгами -->
        <div class="carousel-item">
            <div class="d-flex justify-content-around">
                <!-- Книга 4 -->
                <div class="text-center">
                    <img src="/images/uyavi_mene.jpg" class="book-banner-img mb-3" alt="Уяви мене. Книга 6">
                    <h6>Уяви мене. Книга 6</h6>
                    <p>Тагере Мафі</p>
                    <a href="/Book/Details/9" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <!-- Книга 5 -->
                <div class="text-center">
                    <img src="/images/man_in_lab.jpg" class="book-banner-img mb-3" alt="Людина в лабіринті">
                    <h6>Людина в лабіринті</h6>
                    <p>Донато Каррізі</p>
                    <a href="/Book/Details/10" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <!-- Книга 6 -->
                <div class="text-center">
                    <img src="/images/4_wing.jpg" class="book-banner-img mb-3" alt="Четверте крило">
                    <h6>Четверте крило</h6>
                    <p>Ребекка Яррос</p>
                    <a href="/Book/Details/11" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Кнопки управління -->
    <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Попередній</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Наступний</span>
    </button>
</div>


<div class="container my-5">
    <div class="row">
        <!-- Ліва панель: Логотип та жанри -->
        <aside class="col-md-3">
            <div class="bg-light p-3 rounded shadow-sm">
                <h4 class="fw-bold mb-3">Жанри книг</h4>
                <ul class="list-unstyled">
                    <li><a href="/Book/Fiction">Художня література</a></li>
                    <li><a href="/Book/Science">Наукова література</a></li>
                    <li><a href="/Book/Fantasy">Фентезі</a></li>
                    <li><a href="/Book/SelfHelp">Саморозвиток</a></li>
                    <li><a href="/Book/Romance">Романтика</a></li>
                    <li><a href="/Book/History">Історія</a></li>
                </ul>
            </div>
        </aside>


        <!-- Основний контент -->
        <section class="col-md-9 popular-books">
            <h2 class="mb-4 fw-bold">Популярні книги</h2>
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="~/images/hirurg.jpg" alt="Хірург. Книга 1" class="book-img mb-3">
                    <h6>Хірург. Книга 1</h6>
                    <p>Тесс Ґеррітсен</p>
                    <a href="/Book/Details/3" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <div class="col-md-3 text-center">
                    <img src="/images/assistent.jpg" alt="Асистент. Книга 2" class="book-img mb-3">
                    <h6>Асистент. Книга 2</h6>
                    <p>Тесс Ґеррітсен</p>
                    <a href="/Book/Details/4" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <div class="col-md-3 text-center">
                    <img src="/images/огида.jpg" alt="Огидне кохання" class="book-img mb-3">
                    <h6>Огидне кохання</h6>
                    <p>Коллін Гувер</p>
                    <a href="/Book/Details/20" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
                <div class="col-md-3 text-center">
                    <img src="/images/brama_europ.jpg" alt="Брама Європи" class="book-img mb-3">
                    <h6>Брама Європи</h6>
                    <p>Сергій Плохій</p>
                    <a href="/Book/Details/12" class="btn btn-primary btn-sm">Дізнатися більше</a>
                </div>
            </div>
        </section>
    </div>
</div>
