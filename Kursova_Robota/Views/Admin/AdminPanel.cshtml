@model IEnumerable<Kursova_Robota.Models.Book>
@{
    ViewData["Title"] = "Адмін-панель";
    <link rel="stylesheet" href="/css/admin.css">
}

<h2 class="text-center my-5">Адмін-панель</h2>
<a class="btn btn-success mb-3" href="Create">Додати нову книгу</a>

<table class="table table-striped table-bordered shadow-sm rounded">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.GenreId</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="Edit/@book.Id">Редагувати</a>
                    <form asp-action="Delete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button class="btn btn-danger btn-sm" type="submit">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
